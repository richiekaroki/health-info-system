# ====================
# Application Settings
# ====================
APP_NAME=HealthInfoSystem
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Africa/Nairobi
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# ====================
# Maintenance Mode
# ====================
APP_MAINTENANCE_DRIVER=file  # file|database|cache
# APP_MAINTENANCE_STORE=database

# ====================
# Database Configuration
# ====================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# ====================
# Session & Cache
# ====================
SESSION_DRIVER=database  # file|cookie|database|memcached|redis
SESSION_LIFETIME=120    # Minutes
SESSION_ENCRYPT=false   # true in production
CACHE_DRIVER=file       # file|redis|memcached
QUEUE_CONNECTION=sync   # sync|database|redis|beanstalkd

# ====================
# Sanctum API Tokens
# ====================
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1
SANCTUM_TOKEN_PREFIX=
SANCTUM_EXPIRATION=10080  # 7 days (in minutes)

# ====================
# L5-Swagger (API Docs)
# ====================
L5_SWAGGER_CONST_HOST=${APP_URL}
L5_SWAGGER_GENERATE_ALWAYS=true
L5_SWAGGER_UI_DARK_MODE=true
L5_SWAGGER_OPEN_API_SPEC_VERSION=3.0.0

# ====================
# Security
# ====================
BCRYPT_ROUNDS=12         # Hashing rounds
SESSION_DOMAIN=null      # For cross-subdomain cookies
SANCTUM_TOKEN_NAME=api-token

# ====================
# Filesystem & Logging
# ====================
FILESYSTEM_DISK=local    # local|public|s3
LOG_CHANNEL=stack        # stack|single|daily|stderr
LOG_LEVEL=debug          # debug|info|notice|warning|error

